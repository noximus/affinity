<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
 
 
?>
<?php $_productCollectionNW=$this->getLoadedProductCollection() ?>
<?php if(!$_productCollectionNW->count()): ?>
<p class="alert alert-danger"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>

<div class="container">
    <?php echo $this->getToolbarHtml() ?>

    <?php // List mode ?>
    <?php if($this->getMode()!='grid'): ?>
    <?php $_iterator = 0; ?>
    <ol class="row" id="products-list">
    <?php foreach ($_productCollectionNW as $_product): ?>
    
        <li class="item<?php if( ++$_iterator == sizeof($_productCollectionNW) ): ?> last<?php endif; ?> col-md-4 col-sm-6 text-center top60 bot60">
            <?php // Product Image ?>
            <a class="product-image-small" href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>">
                <img class="img-responsive center-block" src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(95, 92); ?>"  alt="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" /></a>

            <?php // Product description ?>
            <div class="product-shop">
                <h5 class="top30 bot30 "><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->htmlEscape($_product->getName())?></a></h5>
                
               <?php echo nl2br($_product->getShortDescription()) ?>
                <?php if($_product->isSaleable()): ?>
                <p><button class="button" onclick="setLocation('<?php echo $_product->getProductUrl() ?>')"><span><?php echo $this->__('Buy now') ?></span></button></p>
                <?php else: ?>
                <p class="availability"><span class="out-of-stock"><?php echo $this->__('Out of stock') ?></span></p>
                <?php endif; ?>
                <div class="desc std">
                    <?php echo nl2br($_product->getShortDescription()) ?>
                    <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->__('Learn More') ?></a>
                </div>
                <ul class="add-to-links">
                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>"><?php echo $this->__('Add to Wishlist') ?></a></li>
                    <?php endif; ?>
                    <?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
                        <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>"><?php echo $this->__('Add to Compare') ?></a></li>
                    <?php endif; ?>
                </ul>
            </div>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('products-list', 'none-recursive')</script>

    <?php else: ?>

    <?php // Grid Mode ?>

    <?php $_collectionSizeNW = $_productCollectionNW->count() ?>
    <div class="container">
    <?php $_columnCount = 3; ?>
    <?php $i=0; foreach ($_productCollectionNW as $_product): ?>
        <?php if ($i++%$_columnCount==0): ?>
        <div class="row">
        <?php endif ?>
            <div class="viewed col-md-4 col-sm-6 text-center top60 bot60">
                <a class="product-image-small" href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>">
                    <img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image'); ?>" alt="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" /></a>
                <h5 class="product-name top30 bot30"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->htmlEscape($_product->getName()) ?></a></h5>
                <span class="center-block"><?php echo nl2br($_product->getShortDescription()) ?></span>
            </div>
        <?php if ($i%$_columnCount==0 && $i!=$_collectionSizeNW): ?>
        </div>
        <div class="col-md-12">
            <hr />
          </div>
        <?php endif ?>
        <?php endforeach ?>
        <?php for($i;$i%$_columnCount!=0;$i++): ?>
              <div class="empty col-md-4 col-sm-6 text-center top60 bot60">&nbsp;</div>
        <?php endfor ?>
        <?php if ($i%$_columnCount==0): ?>
        </div>
                <?php endif ?>
    </div>
    <script type="text/javascript">decorateTable('products-grid-table')</script>
    <?php endif; ?>
    <?php echo $this->getToolbarHtml() ?>
</div>
<?php endif; ?>
